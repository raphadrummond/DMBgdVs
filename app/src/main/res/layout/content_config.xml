<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Activity.Activity.ConfigActivity"
    tools:showIn="@layout/activity_config">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Configurações da Empresa"
                    android:id="@+id/textConfig"
                    android:textSize="@dimen/fonte_17"
                    android:padding="12dp"
                    android:textStyle="bold"
                    android:gravity="center"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="CNPJ da Empresa:"
                    android:id="@+id/textCNPJ"
                    android:textSize="@dimen/fonte_15"
                    android:padding="12dp"
                    android:gravity="left"
                    android:textStyle="bold"/>

                <EditText
                    android:textSize="@dimen/fonte_15"
                    android:layout_marginRight="12dp"
                    android:layout_marginLeft="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/editCNPJ"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Código Databit:"
                    android:id="@+id/textDatabit"
                    android:textSize="@dimen/fonte_15"
                    android:padding="12dp"
                    android:textStyle="bold"/>

                <EditText
                    android:textSize="@dimen/fonte_15"
                    android:layout_marginRight="12dp"
                    android:layout_marginLeft="12dp"
                    android:layout_width="300px"
                    android:layout_height="wrap_content"
                    android:id="@+id/editDatabit"
                    android:maxLength="8"
                    android:gravity="left"
                    android:layout_gravity="left"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="URL do Servidor:"
                    android:id="@+id/textIp"
                    android:textSize="@dimen/fonte_15"
                    android:padding="12dp"
                    android:gravity="left"
                    android:textStyle="bold"/>

                <EditText
                    android:textSize="@dimen/fonte_15"
                    android:layout_marginRight="12dp"
                    android:layout_marginLeft="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/editIp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Endereço WebService:"
                    android:id="@+id/textWebService"
                    android:textSize="@dimen/fonte_15"
                    android:padding="12dp"
                    android:gravity="left"
                    android:textStyle="bold"/>

                <EditText
                    android:textSize="@dimen/fonte_15"
                    android:layout_marginRight="12dp"
                    android:layout_marginLeft="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/editWebService"/>


                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="20dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp">

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Gravar"
                        android:id="@+id/btnGravar"
                        android:background="@drawable/bg_botao"/>


                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</FrameLayout>
